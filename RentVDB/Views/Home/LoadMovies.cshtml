@model IEnumerable<RentVDB.Models.MovieMay>

@{
    ViewBag.Title = "LoadMovies";

    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Genre.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAdded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberInStock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberAvailable)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberInStock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberAvailable)
                    </td>
                    <td>
                        @Html.ActionLink("Rent", "Rent", new { id = item.Id }) |

                    </td>
                </tr>
            }

        </table>

    </div>
</body>
</html>
